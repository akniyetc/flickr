<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contentPhotos"
            android:padding="4dp">

        <android.support.v7.widget.CardView
                android:id="@+id/cardViewSearchContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_view_padding"
                app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/photoTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_view_padding"
                    android:layout_marginLeft="@dimen/default_view_padding"
                    android:layout_marginRight="@dimen/default_view_padding"
                    android:layout_marginTop="@dimen/default_padding"
                    android:hint="@string/search_hint"
                    android:theme="@style/TextInputLayout"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/photoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/edit_text_text_size"/>

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/cardViewSearchContent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="4dp">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_photo"/>

        </android.support.v4.widget.SwipeRefreshLayout>

    </android.support.constraint.ConstraintLayout>

    <include
            android:id="@+id/fullscreenProgressView"
            layout="@layout/item_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    <include
            layout="@layout/layout_zero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>